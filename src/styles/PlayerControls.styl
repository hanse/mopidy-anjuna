@import 'nib'

.PlayerControls
  display flex

  button
    border 0
    background transparent
    text-shadow 0 0 2px #fff
    color #4D5259
    cursor pointer
    outline none
    font-size 1.6rem
    text-shadow 0 0 1px #fff
    display inline-block
    padding 10px

    &:nth-of-type(2)
      font-size 2rem

    &:hover
      color #000

    &[disabled]
      color #777

  .volume-level
    font-size 1.6rem
    padding 10px 5px

  input.volume[type=range]
    appearance none
    background transparent
    margin-right 5px

    &::-webkit-slider-runnable-track
      background #F2F2F0
      border-radius 5px
      width 100px
      border none

    &::-webkit-slider-thumb
      appearance none
      border none
      background #4D5259
      height 16px
      width 16px
      border-radius 8px

    &:focus
      outline none

.seekbar
  display flex
  flex-direction row

  &-current-time, &-total-time
    padding 0 5px
